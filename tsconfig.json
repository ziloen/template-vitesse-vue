{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve", // volar don't need this after 1.0.0
    "jsxImportSource": "vue", // vue 3.3.0+
    /** 
     * ===== Modules =====
     */
    "allowImportingTsExtensions": true,
    /**
     * ===== Type Checking =====
     */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": false,
    // "allowUnusedLabels": true,
    // "allowUnreachableCode": true,
    /**
     * ===== Emit =====
     */
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": false,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": false,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "typescript-lib-enhancer"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "vueCompilerOptions": {
    // vue version (default: "auto")
    "target": 3.3,
    // strict type check for Component tag and Props types (BUGï¼Œnot working with svg, off)
    // "strictTemplates": true,
    // "jsxTemplates": false,
    // "skipTemplateCodegen": false,
    // link class for style block without scoped
    "experimentalResolveStyleCssClasses": "always",
  },
  "exclude": [
    "dist",
    "node_modules",
    "volar.config.js"
  ]
}