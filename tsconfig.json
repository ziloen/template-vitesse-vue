{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    /** 
     * ===== Modules =====
     */
    // "allowUmdGlobalAccess": false,
    "allowImportingTsExtensions": true,
    // "resolvePackageJsonExports": false,
    // "resolvePackageJsonImports": false,
    "allowArbitraryExtensions": true, // Not working in vue files
    /**
     * ===== Type Checking =====
     */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    // "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": false,
    // "allowUnusedLabels": true,
    // "allowUnreachableCode": true,
    /**
     * ===== Language and Environment =====
     */
    "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    // "useDefineForClassFields": false,
    /**
     * ===== Emit =====
     */
    // "declaration": false,
    // "inlineSourceMap": false,
    "removeComments": true,
    "allowJs": false,
    // "incremental": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "stripInternal": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": false,
    /**
     * ===== Interop Constraints =====
     */
    // "isolatedModules": false,
    // "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /**
     * ===== Output Formatting =====
     */
    "preserveWatchOutput": true,
    "pretty": true,
    "noErrorTruncation": false,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "unplugin-vue-macros/macros-global",
      "ts-lib-enhance",
      "ts-lib-enhance/highlight",
      "ts-lib-enhance/view-transition",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~cwd/*": [
        "./*"
      ],
    },
    "plugins": [
      // https://github.com/mrmckeb/typescript-plugin-css-modules?tab=readme-ov-file#visual-studio-code
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "vueCompilerOptions": {
    // vue version (default: "auto")
    // "target": 3.3,
    // strict type check for Component tag and Props types (BUGï¼Œnot working with svg, off)
    "strictTemplates": true,
    "jsxSlots": true,
    // "jsxTemplates": false,
    // "skipTemplateCodegen": false,
    // link class for style block without scoped
    "experimentalResolveStyleCssClasses": "always",
    "plugins": [
      "@vue-macros/volar/jsx-directive"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "test",
    // config files
    "eslint.config.js",
    "unocss.config.ts",
    "vite.config.ts",
    "volar.config.js",
  ]
}