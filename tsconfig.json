{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve", // volar don't need this after 1.0.0
    // type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    //
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "typescript-lib-enhancer"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "vueCompilerOptions": {
    // vue version，default 3
    "target": 3,
    // strict type check for Component tag and Props types (BUG，not working with svg, off)
    // "strictTemplates": true,
    // "jsxTemplates": false,
    // "skipTemplateCodegen": false,
    "narrowingTypesInInlineHandlers": true,
    // link class for style block without scoped
    // "experimentalResolveStyleCssClasses": "always",
    // generic component - ⚠ experimental！
    "experimentalRfc436": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "volar.config.js"
  ]
}