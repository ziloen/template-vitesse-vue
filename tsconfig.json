{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    /** 
     * ===== Modules =====
     */
    // "allowUmdGlobalAccess": false,
    "allowImportingTsExtensions": true,
    // "resolvePackageJsonExports": false,
    // "resolvePackageJsonImports": false,
    "allowArbitraryExtensions": true, // Not working in vue files
    /**
     * ===== Type Checking =====
     */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    // "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": false,
    // "allowUnusedLabels": true,
    // "allowUnreachableCode": true,
    /**
     * ===== Language and Environment =====
     */
    "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
    // "useDefineForClassFields": false,
    /**
     * ===== Emit =====
     */
    // "declaration": false,
    // "inlineSourceMap": false,
    "removeComments": true,
    "allowJs": false,
    // "incremental": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": false,
    /**
     * ===== Interop Constraints =====
     */
    // "isolatedModules": false,
    // "verbatimModuleSyntax": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    /**
     * ===== Output Formatting =====
     */
    "preserveWatchOutput": true,
    "pretty": true,
    "noErrorTruncation": false,
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "typescript-lib-enhancer",
      "typescript-lib-enhancer/highlight",
      "typescript-lib-enhancer/view-transition",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~cwd/*": [
        "./*"
      ],
    }
  },
  "vueCompilerOptions": {
    // vue version (default: "auto")
    // "target": 3.3,
    // strict type check for Component tag and Props types (BUGï¼Œnot working with svg, off)
    // "strictTemplates": true,
    // "jsxTemplates": false,
    // "skipTemplateCodegen": false,
    // link class for style block without scoped
    "experimentalResolveStyleCssClasses": "always",
  },
  "exclude": [
    "dist",
    "node_modules",
    "volar.config.js"
  ]
}