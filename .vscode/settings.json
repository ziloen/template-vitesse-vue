{
  "[json]": {
    "editor.codeActionsOnSave": [
      "source.sort.json",
    ],
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // add @apply & @container to css atDirectives
  "css.customData": [
    ".vscode/css-data.json",
  ],
  "editor.codeActionsOnSave": [
    // only sort imports
    "source.sortImports",
    // remove unused imports & sort imports
    // "source.organizeImports",
    "source.fixAll.eslint",
  ],
  // due to this issue https://github.com/microsoft/vscode/issues/179355, we need to set this to top
  // "editor.snippetSuggestions": "top",
  // add @container & @media snippet
  "emmet.extensionsPath": [
    ".vscode/emmet",
  ],
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
  ],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": "src/locales",
  "i18n-ally.sortKeys": true,
  "i18n-ally.sourceLanguage": "en",
  "javascript.preferences.autoImportSpecifierExcludeRegexes": [
    "^node:console$",
  ],
  "prettier.enable": false,
  // https://devblogs.microsoft.com/typescript/announcing-typescript-5-6/#exclude-patterns-for-auto-imports10 
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    "^node:console$",
  ],
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  // https://github.com/mrmckeb/typescript-plugin-css-modules?tab=readme-ov-file#visual-studio-code
  // ts css module plugin support
  "typescript.tsdk": "node_modules/typescript/lib"
}